# Activar el motor de reescritura
RewriteEngine On

# Evitar la navegación de directorios
Options -Indexes

# Bloquear el acceso a archivos que no sean PHP
<FilesMatch "\.(?!php$).*">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Proteger archivos sensibles (htaccess, htpasswd, ini, log, sh, etc.)
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|bak|json|lock)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Bloquear bots maliciosos usando el archivo robots.txt
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_USER_AGENT} ^.*(badbot|evilbot|crawler).* [NC]
    RewriteRule ^.* - [F,L]
</IfModule>

# Permitir solo ciertos agentes en robots.txt
<Files "robots.txt">
    Order Allow,Deny
    Allow from all
</Files>

# Configuración PHP (ajustar límites si es necesario)
php_value upload_max_filesize 10M
php_value post_max_size 10M
