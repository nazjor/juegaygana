# Activar el motor de reescritura
RewriteEngine On

# Evitar la navegación de directorios
Options -Indexes

# Permitir el acceso a imágenes, CSS, JS y otros archivos estáticos
<FilesMatch "\.(jpg|jpeg|png|gif|css|js|svg|ico|woff|woff2|eot|ttf|otf)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Bloquear el acceso a todos los archivos que no sean .php
<FilesMatch "\.(?!php$).*">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Proteger archivos sensibles (htaccess, htpasswd, ini, log, sh, bak, json, etc.)
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|bak|json|lock)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Bloquear bots maliciosos usando el archivo robots.txt
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_USER_AGENT} ^.*(badbot|evilbot|crawler).* [NC]
    RewriteRule ^.* - [F,L]
</IfModule>

# Permitir solo ciertos agentes en robots.txt
<Files "robots.txt">
    Order Allow,Deny
    Allow from all
</Files>

# Configuración PHP (ajustar límites si es necesario)
php_value upload_max_filesize 10M
php_value post_max_size 10M
